    ##     L.geoJson(data,{
    ##         onEachFeature: function (feature, layer) {
    ##             layer.bindPopup(feature.properties.name);
    ##         }
    ##     }).addTo(map);
    ## });

    var geoJSON = $JSONString;

    var lineStyle = {
        "color": "#ff7800",
        "weight": 5,
        "opacity": 0.75
    };

    L.geoJSON(geoJSON, {
        style: lineStyle
    }).addTo(map);

</script>
</body>
</html>
